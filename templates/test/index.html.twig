{% extends 'base.html.twig' %}

{% block title %}Página de Prueba
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-bold mb-4">Página de prueba con Flowbite</h1>

	{# Botón para abrir Modal #}
	<button data-modal-target="exampleModal" data-modal-toggle="exampleModal" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
		Abrir Modal
	</button>

	{# Modal de Flowbite #}
	<div id="exampleModal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 w-full md:inset-0 h-modal md:h-full">
		<div class="relative p-4 w-full max-w-md h-full md:h-auto">
			<div class="relative bg-white rounded-lg shadow">
				<div class="flex justify-between items-start p-5 rounded-t border-b">
					<h3 class="text-xl font-semibold">
						Modal de prueba
					</h3>
					<button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-modal-hide="exampleModal">
						<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20">
							<path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
						</svg>
					</button>
				</div>
				<div class="p-6">
					<p class="text-base leading-relaxed text-gray-500">
						Este es un modal de prueba usando Flowbite.
					</p>
				</div>
				<div class="flex items-center p-6 space-x-2 rounded-b border-t border-gray-200">
					<button data-modal-hide="exampleModal" type="button" class="text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5">Cerrar</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'student/base.html.twig' %}

{% block content %}
	<h1 class="text-2xl font-bold mb-6">Mi Perfil de Intereses</h1>

	<p class="mb-6 text-gray-600">Ajusta tus intereses para mejorar las recomendaciones.</p>

	<form method="post" id="interestForm" class="space-y-6 max-w-2xl">
		{% set interests = profile.interests ?? {} %}

		{% for category, label in {
        'arte': 'Arte y Creatividad',
        'ciencia': 'Ciencia y Naturaleza',
        'tecnologia': 'Tecnología e Informática',
        'deporte': 'Deporte y Actividad Física',
        'musica': 'Música'
    } %}
			<div class="bg-gray-50 p-4 rounded-lg">
				<div class="flex justify-between items-center mb-2">
					<label class="block text-sm font-medium text-gray-700">{{ label }}</label>
					<span id="value-{{ category }}" class="text-sm font-bold text-blue-600">{{ interests[category] ?? 0 }}/5</span>
				</div>
				<input type="range" name="{{ category }}" min="0" max="5" value="{{ interests[category] ?? 0 }}" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer slider" oninput="updateValue('{{ category }}', this.value)" onchange="document.getElementById('interestForm').submit()">
			</div>
		{% endfor %}

		<button type="submit" class="hidden"></button>
	</form>

	<script>
		function updateValue(category, value) {
document.getElementById('value-' + category).textContent = value + '/5';
}
	</script>

	<a href="{{ path('student_courses') }}" class="mt-4 inline-block text-blue-600 hover:underline">← Volver a cursos</a>
{% endblock %}

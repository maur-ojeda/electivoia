{% extends 'student/base.html.twig' %}

{% block content %}
	<h1 class="text-2xl font-bold mb-6">Mi Perfil de Intereses</h1>

	<p class="mb-6 text-gray-600">Ajusta tus intereses para mejorar las recomendaciones.</p>

	{% set categories = [
    'Filosofía',
    'Historia, geografía y ciencias sociales',
    'Lengua y literatura',
    'Matemática',
    'Ciencias',
    'Artes',
    'Educación física y salud'
] %}

	<form method="post" id="interestForm">
		<h3 class="font-medium mb-2">Ajusta tus intereses:</h3>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
			{% for category in categories %}
				<div class="bg-gray-50 p-3 rounded">
					<label class="block text-sm font-medium text-gray-700 mb-1">{{ category }}</label>
					<input type="range" name="interests[{{ category }}]" min="0" max="5" value="{{ (interests[category] ?? 0) }}" class="w-full" oninput="this.nextElementSibling.value = this.value">
					<output class="text-xs text-gray-600 mt-1">{{ interests[category] ?? 0 }}/5</output>
				</div>
			{% endfor %}
		</div>
		<button type="submit" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
			Guardar cambios
		</button>
	</form>

	<script>
		function updateValue(category, value) {
document.getElementById('value-' + category).textContent = value + '/5';
}
	</script>

	<a href="{{ path('student_courses') }}" class="mt-4 inline-block text-blue-600 hover:underline">← Volver a cursos</a>
{% endblock %}

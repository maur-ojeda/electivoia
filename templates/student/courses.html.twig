{% extends 'student/base.html.twig' %}

{% block content %}
	<h1 class="text-2xl font-bold mb-6">Cursos Electivos Disponibles</h1>

	<!-- Filtros -->
	<div class="mb-4 flex gap-4">
		<a href="{{ path('student_courses') }}" class="px-3 py-1 bg-gray-200 rounded">Todos</a>
		<a href="{{ path('student_courses') }}?available=1" class="px-3 py-1 bg-blue-200 rounded">Con cupo</a>
	</div>

	<!-- Enlace a "Mis cursos" -->
	<a href="{{ path('student_enrollments') }}" class="inline-block mb-4 px-4 py-2 bg-gray-800 text-white rounded">
		ðŸ“š Mis cursos inscritos
	</a>

	<!-- Recomendaciones -->
	<!-- Recomendaciones + Formulario de intereses -->
	{% if student.interestProfile %}
		<div class="mb-8">
			<h2 class="text-xl font-semibold mb-3 text-blue-600">Recomendaciones personalizadas</h2>

			<!-- Formulario de intereses -->
			<form method="post" action="{{ path('student_update_interests') }}" class="mb-4 p-4 bg-gray-50 rounded">
				<h3 class="font-medium mb-2">Ajusta tus intereses:</h3>
				{% set interests = student.interestProfile.interests ?? {} %}
				<div class="grid grid-cols-2 md:grid-cols-5 gap-4">
					{% for category, label in {
        'arte': 'Arte',
        'ciencia': 'Ciencia',
        'tecnologia': 'TecnologÃ­a',
        'deporte': 'Deporte',
        'musica': 'MÃºsica'
      } %}
						<div class="text-center">
							<label class="block text-sm font-medium text-gray-700 mb-1">{{ label }}</label>
							<input type="range" name="{{ category }}" min="0" max="5" value="{{ interests[category] ?? 0 }}" class="w-full" oninput="this.nextElementSibling.value = this.value">
							<output class="text-xs text-gray-600 mt-1">{{ interests[category] ?? 0 }}</output>
						</div>
					{% endfor %}
				</div>
				<button type="submit" class="mt-3 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
					Guardar cambios
				</button>
			</form>

			<!-- Lista de recomendaciones -->
			{% if recommendations|length > 0 %}
				<div class="space-y-3">
					{% for item in recommendations %}
						<div class="bg-blue-50 p-3 rounded border-l-4 border-blue-500">
							<h3 class="font-bold">{{ item.course.name }}</h3>
							<p class="text-sm text-gray-600">{{ item.course.description }}</p>
							<p class="text-xs text-blue-700 mt-1">Recomendado por:
								{{ item.reasons|join(', ') }}</p>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p class="text-gray-500 text-sm">No hay recomendaciones. Ajusta tus intereses arriba.</p>
			{% endif %}
		</div>
	{% else %}
		<div class="mb-8">
			<p class="text-gray-600">Completa tu
				<a href="{{ path('student_profile') }}" class="text-blue-600 hover:underline">perfil de intereses</a>
				para recibir recomendaciones.</p>
		</div>
	{% endif %}


	<!-- Lista de cursos -->
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		{% for course in courses %}
			<div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
				<div class="p-5">
					<div class="flex justify-between items-start">
						<h3 class="text-lg font-bold text-gray-900">{{ course.name }}</h3>
						<span class="bg-blue-100 text-blue-800 text-xs font-medium px-2 py-0.5 rounded">
							{{ course.schedule }}
						</span>
					</div>
					<p class="mt-2 text-gray-600 text-sm">{{ course.description|raw }}</p>

					<div class="mt-4 flex items-center justify-between">
						<span class="text-sm font-medium text-gray-700">
							Cupo:
							{{ enrollmentCounts[course.id] ?? 0 }}
							/
							{{ course.maxCapacity }}
						</span>
						{% if enrollmentCounts[course.id] ?? 0 >= course.maxCapacity %}
							<span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
								Lleno
							</span>
						{% endif %}
					</div>

					<form method="post" action="{{ path('student_enroll', {id: course.id}) }}" class="mt-4">
						{% if course.id in enrolledCourseIds %}
							<button type="button" class="w-full bg-gray-400 text-white font-medium py-2 px-4 rounded cursor-not-allowed">
								Inscrito
							</button>
						{% else %}
							<button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" {% if enrollmentCounts[course.id] ?? 0 >= course.maxCapacity %} disabled {% endif %}>
								Inscribirse
							</button>
						{% endif %}
					</form>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
